<!DOCTYPE html>
<html lang="en" style="background-color: black">
	<head>
        <title>{{obj.title}}</title>
		<meta charset="utf-8"/>
		<meta name="description" content="{{obj.description}}">

		<link rel="stylesheet" type="text/css" href="css/game.css" media="print" onload="this.media='all'">

		<meta name="mobile-web-app-capable" content="yes">
		<meta name="viewport" content="minimal-ui, user-scalable=no, initial-scale=1">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<meta name="apple-mobile-web-app-title" content="{{obj.title}}">

		<script src="generated/js/data.js"></script>
		<script src="game/game.js"></script>
		<script src="game/sprite-definition.js"></script>
		<script src="core/gl-matrix.js"></script>
		<script src="core/constants.js"></script>
		<script src="core/utils.js"></script>
		<script src="core/pool.js"></script>
		<script src="core/texture-manager.js"></script>
		<script src="core/shader.js"></script>
		<script src="core/scene-renderer.js"></script>
		<script src="core/data-store.js"></script>
		<script src="core/keyboard.js"></script>
		<script src="core/engine-buffer.js"></script>
		<script src="core/engine-chunk.js"></script>
		<script src="core/gl-renderer.js"></script>
		<script src="core/sprite-provider.js"></script>
		<script src="core/base-sprite.js"></script>
		<script src="core/image-sprite.js"></script>
		<script src="core/animated-sprite.js"></script>
		<script src="core/sprite.js"></script>
		<script src="core/sprite-definition-processor.js"></script>
		<script src="core/engine.js"></script>
		<script src="core/game-property.js"></script>
		<script src="core/config-processor.js"></script>
		<script src="core/scene-manager.js"></script>

 		{{#obj.scenes}}
		<script>SceneManager.loadingSceneName = "{{.}}";</script>
		<script src="generated/js/scenes/{{.}}/start.js"></script>
		{{/obj.scenes}}		
	</head>

	<body class="container">
		<div id=gameOver style="margin: 10px; font-size: 80pt; position: absolute; color: #990000; font-family: 'Creepster', cursive;"></div>
		<div>
			<div style="display: flex; flex-direction: row">
				
			</div>
			<div id=score style="margin: 10px; font-size: 20pt; position: absolute; color: silver"></div>
			<canvas id="canvas" width={{obj.width}} height={{obj.height}}></canvas>
		</div>
		<script>
			const config = ({{{json}}});
			const engine = new Engine(document.getElementById("canvas"), SceneManager.instance, config);
			function startGame() {
				engine.start();
			}
		
			document.addEventListener("DOMContentLoaded", startGame);
		</script>
	</body>
</html>